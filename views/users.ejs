<!DOCTYPE html>
<html lang="he">

    <%- include('static/head')%>
    <%- include('static/navBar')%>
 

    <div class="container-md"> 
    <h5><b><%=user.firstName%></b> כיף שחזרת! </h5>
    </div>
    <div class="mx-auto"> <h5><b>מסך פרטים אישיים של המשתמשים</b></h5></div>

    <%if(datas && datas.length){%>
        <% for(let data of datas) {%>  
            <div class="container-md">
        <div class="row">
            <div class="col-md-4">
                <div class="card user-card">
                    <div class="card-block">
                        <h6 class="f-w-600 m-t-25 m-b-10"><%- data.firstName %> <%- data.lastName %></h6>
                        <p class="text-muted"><%- data.email %></p>
                        <hr>
                        <a class="btn btn-success"href="/users/<%- data._id %>"> לצפיה בפרטי המשתמש </a>
                        <hr>
                    </div>
                </div>
            </div>  
        </div>
    </div>
            <% } %>
    <% }else{ %>

        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-xl-6 col-md-12">
                        <div class="card user-card-full">
                            <div class="row m-l-0 m-r-0">
                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                    <div class="card-block text-center text-white">
    <br><br>
    <%if(work!="-"){%>
        <br><br><br>
        <% } %> 
                                        <h5 class="f-w-600"><%- datas.firstName %> <%- datas.lastName %></h5>
                                        <p><%- datas.role %></p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">מידע אישי</h6>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">מייל</p>
                                                <h6 class="text-muted f-w-400"><%- datas.email %></h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">טלפון</p>
                                                <h6 class="text-muted f-w-400"><%- datas.phone %></h6>
                                            </div>
                                            <%if(work!="-"){%>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">שם החברה</p>
                                                <h6 class="text-muted f-w-400"><%- datas.nameOfComp %></h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">מספר עוסק</p>
                                                <h6 class="text-muted f-w-400"> <%- datas.numOfComp %></h6>
                                            </div>
                                            <% } %> 
                                        </div>
                                        <%if(work!="-"){%>
                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">אחראי על התיק</h6>
                                        <div class="row">
                                            <div class="col-sm-10">
                                                <p class="m-b-10 f-w-600">שם העובד:</p>
                                                <h6 class="text-muted f-w-400"><a href="/users/<%=work._id %>"><%- work.firstName %> <%- work.lastName %></a></h6>
                                            <br>
                                            </div>
                                        </div>
                                        <% } %> 
                                        <div class="">
                                            <%if(isLogin==datas._id||role=="מנהל"||role=="עובד"){%>
                                               <a href="/users/<%=datas._id%>/edit" class="btnIcon"><i class="fa fa-pencil-square-o"></i></a>
                                                <% } %>
                                                <%if(role=="מנהל"||role=="עובד"){%>
                                                    <a href="/users" class="btnIcon"><i class="fa fa-reply"></i></a>
                                                <form style='display:inline;' action="/users/<%=datas._id%>?_method=DELETE" method="POST">
                                                    <button class="btnIcon" onclick= "return confirm('אתה בטוח שאתה רוצה למחוק את המשתמש הזה?')")><i class="fa fa-trash"></i></button>
                                                    </form>   
                                                    
                                                <% } %>
                                                </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <% } %>

       
    </body>
    </html>











